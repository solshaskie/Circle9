{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"outDir": "out",
		"target": "ES2021",
		"baseUrl": ".",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/*", "src/Typings/**/*"]
}
